name = Omega Default Starterkit
description = The Omega Default Starterkit provides a large set of customizable regions. Recommended for most users.
core = 7.x
engine = phptemplate
screenshot = screenshot.png
version = VERSION
base theme = omega

; BREAKPONTS (DEFAULTS)
breakpoints[all] = 'all'
breakpoints[tablet] = 'all and (min-width: 600px) and (max-width: 1023px)'
breakpoints[desktop] = 'all and (min-width: 1024px) and (max-width: 1279px)'
breakpoints[wide] = 'all and (min-width: 1280px)'

; REGIONS
regions[page_top] = Page Top
regions[header] = Header
regions[branding] = Branding
regions[menu] = Menu
regions[preface_first] = Preface First
regions[preface_second] = Preface Second
regions[preface_third] = Preface Third
regions[preface_fourth] = Preface Fourth
regions[highlighted] = Highlighted
regions[help] = Help
regions[content] = Content
regions[sidebar_first] = Sidebar First
regions[sidebar_second] = Sidebar Second
regions[postscript_first] = Postscript First
regions[postscript_second] = Postscript Second
regions[postscript_third] = Postscript Third
regions[postscript_fourth] = Postscript Fourth
regions[footer] = Footer
regions[page_bottom] = Page Bottom

; REGION GROUPS (DEFAULTS)
region_groups[header] = 'Header'
region_groups[preface] = 'Preface'
region_groups[core] = 'Core'
region_groups[main] = 'Main'
region_groups[postscript] = 'Postscript'
region_groups[footer] = 'Footer'

; THEME SETTINGS (DEFAULTS)
settings[styles][scss_html_elements] = 1
settings[styles][scss_branding] = 1
settings[styles][scss_breadcrumbs] = 1
settings[styles][scss_main_menus] = 1
settings[styles][scss_messages] = 1
settings[styles][scss_pagers] = 1
settings[styles][scss_tabs] = 1

; default layout name
settings[default_layout] = 'omega_default'

; regions to not show the Omega placeholder blocks in, even when they are enabled
settings[block_demo_excluded_regions][] = 'page_top'
settings[block_demo_excluded_regions][] = 'page_bottom'
settings[block_demo_excluded_regions][] = 'highlighted'
settings[block_demo_excluded_regions][] = 'help